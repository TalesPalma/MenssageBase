<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_menssage_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/borderStyle"
        app:srcCompat="@drawable/user_image" />

    <TextView
        android:id="@+id/item_menssage_textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Tales Palma"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_menssage_imageView"
        app:layout_constraintStart_toEndOf="@+id/item_menssage_imageView"
        app:layout_constraintTop_toTopOf="@+id/item_menssage_imageView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item_menssage_LastMenssage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="ultima mensagem"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_menssage_imageView"
        app:layout_constraintStart_toEndOf="@+id/item_menssage_imageView"
        app:layout_constraintTop_toBottomOf="@+id/item_menssage_textName"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>